<div class="col-sm-5">
<h5 class="category"><strong>Eat a Burger</strong></h5>
  <form action="/create" method="POST" class="button-size">
    <select class="browser-default" name="burgerInput">
      <option value="" disabled selected>Choose a burger</option>

      {{#each itm}}
        {{#if entree}}
          <option value="{{this.item}}">{{this.item}}</option>
        {{/if}}
      {{/each}}

    </select>
    <br>
    <button type="submit" class="btn btn-primary">SUBMIT</button>
  </form>
</div>  

